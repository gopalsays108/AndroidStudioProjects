<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImageRequest"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_margin="15dp"
        android:src="@drawable/download" />

    <TextView
        android:id="@+id/userNameRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="2dp"
        android:layout_toEndOf="@+id/profileImageRequest"
        android:text="Name"
        android:textColor="@android:color/black"
        android:textSize="22sp" />

    <Button
        android:id="@+id/acceptRequestBtn"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_below="@+id/userNameRequest"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/profileImageRequest"
        android:background="@drawable/rounded_btn"
        android:backgroundTint="#5860EA"
        android:text="Accept"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <Button
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_toEndOf="@id/acceptRequestBtn"
        android:layout_below="@+id/userNameRequest"
        android:layout_marginTop="4dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/rounded_btn"
        android:backgroundTint="#E44646"
        android:text="Decline"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:id="@+id/declineRequestBtn"/>

</RelativeLayout>