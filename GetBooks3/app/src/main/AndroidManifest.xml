<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.gopal.devjunction.getbooks">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NOTIFICATION_POLICY" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.gopal.devjunction.ApplicationClass"
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:roundIcon="@id/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.gopal.devjunction.TermsAcceptActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">

        </activity>
        <activity
            android:name="com.gopal.devjunction.allbooks.MoreBookActivity"
            android:screenOrientation="portrait">

        </activity>
        <activity
            android:name="com.gopal.devjunction.allbooks.AllBooksActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.gopal.devjunction.requestbook.RequestBookActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.gopal.devjunction.UploadBooksActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.gopal.devjunction.AllpdfActivity"
            android:screenOrientation="portrait" />
        <meta-data
            android:name="android.app.searchable"
            android:resource="@xml/searchable" />

        <activity
            android:name="com.gopal.devjunction.register.SignUpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.gopal.devjunction.register.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.gopal.devjunction.ReadPdfActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.gopal.devjunction.AboutBooksActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AboutUsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LikedBookActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.gopal.devjunction.splashscreenandonboard.IntroActivity"
            android:screenOrientation="portrait"
            android:theme="@style/InfoTheme" />
        <activity
            android:name="com.gopal.devjunction.splashscreenandonboard.SplashScreenActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Base.Theme.AppCompat"
            tools:ignore="LockedOrientationActivity" />
    </application>

</manifest>